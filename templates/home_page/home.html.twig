{% extends 'base.html.twig' %}

{% block title %}Garage V.Parrot
{% endblock %}

{% block body %}
	<div>
		<h1>
			Garage V.Parrot</h1>
		<h2>
			Nos Services</h2>
		<h3>
			Révision de votre véhicule
		</h3>
		<p>
			Un paragraphe
		</p>
	</div>

	{# Comment Section #}
	<section class="pt-5 pb-5">
		<div class="container">
			<div class="row">
				<div class="col-6">
					<h3 class="mb-3">Avis Client
					</h3>
				</div>
				<div class="col-12">
					<div class="row">
				
					
					
						{% for comment in comments|slice(0,7) %}
						{% if comment.approved == 1 %}
							<div  class="col-md-4 mb-3">
								<div class="card">
									<div class="card-body">
										<div class="d-flex justify-content-between">
											<h5 class="card-title">{{comment.title}}</h5>
											<i class="card-subtitle mb-2 text-danger">{{comment.grade}}/5</i>
										</div>
										<p class="card-text mt-2">
											{{comment.content}} </p>
										<p class="text-muted small"> <em>
											Ecrit par
											{{comment.author}}</em>
										</p>
									</div>
								</div>
							</div>
							{% endif %}
						{% endfor %}
						
					</div>
				</div>
				<a href="/comment/new" class="d-flex justify-content-center">
					Votre avis nous intéresse !
				</a>
			</div>
		</div>
	</section>
{% endblock %}
