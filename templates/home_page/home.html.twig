{% extends 'base.html.twig' %}

{% block title %}Garage V.Parrot
{% endblock %}

{% block body %}
	<section>
		{# Service Section #}
		<div class="bg-danger p-5 rounded">
			<div class="container ">
				<h2 id="service" class="text-white">
					Les Services du Garage Parrot</h2>
				<div>
					{% for service in services %}
						<div class="card mt-1 mb-1">
							<div class="card-body">
								<h3 class="card-title">{{service.title}}</h3>
								<p class="card-text">{{service.content}}</p>
								{% if app.user %}
									{% if app.user.username == 'Parrot' %}
										<div class="card-body">
											<a href="{{ path('delete-service', {'id':service.id}) }}" class="card-link">Supprimer</a>
											<a href="{{ path('edit-service', {'id':service.id}) }}" class="card-link">Modifier</a>
										</div>
									</div>
								</div>
								<div class=" d-flex justify-content-center m-5">
									<a href="/service/new" class="btn btn-danger">Ajouter un service</a>
								</div>
							{% endif %}
						{% endif %}
					{% endfor %}
				</div>
			</div>
		</div>
	</section>

	{# Car Section #}
	<section>
		<img src="/assets/upload/CarBannerHyunday.jpg" alt="Voiture Garage V.Parrot" style="width:100%; height: 50vh; object-fit: cover; object-position: 100% 10%;">
		<h1 class="text-center">
			Visiter le Garage V.Parrot
		</h1>
		<div class="d-flex justify-content-center">
			<a href="/#timetable" class="btn btn-danger">
				Voir les horraires
			</a>
		</div>

	</section>

	{# Comment Section #}
	<section class="pt-5 pb-5">
		<div class="container">
			<div class="row">
				<div class="col-6">
					<h3 class="mb-3">Avis Client
					</h3>
				</div>
				<div class="col-12">
					<div class="row">


						{% for comment in comment.getComment %}
							{% if comment.approved == 1 %}
								<div class="col-md-4 mb-3">
									<div class="card">
										<div class="card-body">
											<div class="d-flex justify-content-between">
												<h5 class="card-title">{{comment.title}}</h5>
												<i class="card-subtitle mb-2 text-danger">{{comment.grade}}/5</i>
											</div>
											<p class="card-text mt-2">
												{{comment.content}}
											</p>
											<p class="text-muted small">
												<em>
													Ecrit par
													{{comment.author}}
												</em>
											</p>
										</div>
									</div>
								</div>
							{% endif %}
						{% endfor %}

					</div>
				</div>
				<a href="/comment/new" class="d-flex justify-content-center">
					Votre avis nous int√©resse !
				</a>
			</div>
		</div>
	</section>
{% endblock %}
