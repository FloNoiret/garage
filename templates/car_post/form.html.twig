{% extends 'base.html.twig' %}

{% block body %}
	<div class="container mt-5 mb-5">
		<h1 class="text-center mt-5">Ajouter un Véhicule d'Occasion</h1>
	</div>

	{# Form to add car #}
	<div class="container mt-5 mb-5">
		{{ form_start(car_post_form) }}
		{{ form_row(car_post_form.title) }}
		{{ form_row(car_post_form.content) }}
		{{ form_row(car_post_form.price) }}
		{{ form_row(car_post_form.kilometer) }}
		{{ form_row(car_post_form.Year) }}
		{{ form_row(car_post_form.image) }}

		{# Options #}
		<p>Options et Equipements</p>

		<ul id="reponses-list" class="reponse">
			{% for reponse in car_post_form.reponses %}
				<li>{{ form_row(reponse.libelle) }}</li>
			{% endfor %}
		</ul>
		<button type="button" id="add-reponse-btn">Ajouter une option</button>

		<p class="mt-4">Caracteristiques</p>


		{# Characteristics #}
		<div id="characteristics-list">
			{% for characteristic in car_post_form.characteristics %}
				<div class="row characteristic">
					<div class="col">
						{{ form_row(characteristic.libelle) }}
					</div>
					<div class="col">
						{{ form_row(characteristic.info) }}
					</div>
				</div>
			{% endfor %}
		</div>
		<button type="button" id="add-characteristic-btn">Ajouter une caractéristique</button>

		<input class="btn btn-danger m-2 addreponse" type="submit" value="Publier">
		{{ form_end(car_post_form) }}
	</div>
{% endblock %}

{% block javascripts %}
	<script>
		// Add option button
document.addEventListener('DOMContentLoaded', function () {
var reponsesList = document.getElementById('reponses-list');
var index = reponsesList.children.length;

document.getElementById('add-reponse-btn').addEventListener('click', function () {
var prototype = '{{ form_widget(car_post_form.reponses.vars.prototype) }}';
var newReponse = prototype.replace(/__name__/g, index);
var li = document.createElement('li');
li.innerHTML = newReponse;
reponsesList.appendChild(li);
index++;
});
});

// Add characteristic button
document.addEventListener('DOMContentLoaded', function () {
var characteristicsList = document.getElementById('characteristics-list');
var index = characteristicsList.children.length;

document.getElementById('add-characteristic-btn').addEventListener('click', function () {
var prototype = '{{ form_widget(car_post_form.characteristics.vars.prototype) }}';
var newCharacteristic = prototype.replace(/__name__/g, index);
var div = document.createElement('div');
div.innerHTML = newCharacteristic;
characteristicsList.appendChild(div);
index++;
});
});
	</script>
{% endblock %}
